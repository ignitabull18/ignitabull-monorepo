{
	"extends": "@ignitabull/config/tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "../../",
		"baseUrl": "./",
		"paths": {
			"@ignitabull/core/*": ["../core/src/*"]
		}
	},
	"include": ["src/**/*.ts", "../core/src/**/*.ts"],
	"exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.spec.ts", "../core/src/**/*.test.ts", "../core/src/**/*.spec.ts", "../core/test/**/*"]
}
