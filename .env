# Ignitabull Environment Variables
# Copy this file to .env.local and fill in your values

# ======================
# Database Configuration
# ======================

# PostgreSQL connection URLs from Supabase
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Local Docker PostgreSQL Configuration
POSTGRES_DB=ignitabull
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password

# ======================
# Supabase Configuration
# ======================

# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ======================
# Neo4j Configuration
# ======================

# Neo4j database for relationship mapping and graph analytics
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j
NEO4J_MAX_POOL_SIZE=50
NEO4J_MAX_RETRY_TIME=30000
NEO4J_CONNECTION_TIMEOUT=60000
NEO4J_LOG_LEVEL=INFO

# ======================
# AI Services
# ======================

# Google Gemini API for AI features
GOOGLE_GENERATIVE_AI_API_KEY=your-gemini-api-key

# ======================
# E-commerce Integrations
# ======================

# Amazon Selling Partner API
AMAZON_SP_CLIENT_ID=your-amazon-client-id
AMAZON_SP_CLIENT_SECRET=your-amazon-client-secret
AMAZON_SP_REFRESH_TOKEN=your-amazon-refresh-token
AMAZON_SP_REGION=us-east-1

# Shopify
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret
SHOPIFY_APP_URL=https://your-app.ngrok.io

# ======================
# Research & SEO Tools
# ======================

# Jungle Scout API (Amazon product research)
JUNGLE_SCOUT_API_KEY=your-jungle-scout-api-key
JUNGLE_SCOUT_API_NAME=your-api-name

# Keepa API (price monitoring)
KEEPA_API_KEY=your-keepa-api-key

# DataForSEO API (SEO metrics and SERP data)
DATAFORSEO_LOGIN=your-dataforseo-login
DATAFORSEO_PASSWORD=your-dataforseo-password

# ======================
# Email & Marketing
# ======================

# Resend for transactional emails (replaces SendGrid)
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@ignitabull.com
RESEND_FROM_NAME=Ignitabull

# React Email for email templates
NEXT_PUBLIC_EMAIL_PREVIEW_URL=http://localhost:3000/email-preview

# ======================
# Payment Processing
# ======================

# Stripe for subscriptions
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# ======================
# Analytics & Tracking
# ======================

# Plausible Analytics (privacy-first)
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=ignitabull.com
NEXT_PUBLIC_PLAUSIBLE_HOST=https://plausible.io

# PostHog (behavioral analytics and heatmaps)
NEXT_PUBLIC_POSTHOG_KEY=your-posthog-project-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics (optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ======================
# Monitoring & Observability
# ======================

# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# OpenTelemetry for observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=ignitabull

# ======================
# Security & Authentication
# ======================

# JWT secrets
JWT_SECRET=your-super-secret-jwt-key

# Encryption key for storing API credentials
ENCRYPTION_KEY=your-32-character-encryption-key

# ======================
# Application Settings
# ======================

# Node environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# API rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ======================
# Development Tools
# ======================

# Vercel (for deployment)
VERCEL_TOKEN=your-vercel-token

# ngrok (for local webhook testing)
NGROK_AUTH_TOKEN=your-ngrok-auth-token

# ======================
# Feature Flags
# ======================

ENABLE_NEO4J=false
ENABLE_INFLUENCER_FEATURES=false
ENABLE_AI_CHAT=true
ENABLE_EMAIL_CAMPAIGNS=true

# ======================
# Cache Configuration
# ======================

# Redis (optional, for caching)
REDIS_URL=redis://localhost:6379

# ======================
# Storage
# ======================

# S3-compatible storage for assets
S3_ENDPOINT=https://your-s3-endpoint.com
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_BUCKET=ignitabull-assets
S3_REGION=us-east-1

